            "type": "object",
            "properties": {
              "detector": {
                "title": "Detector",
                "description": "The name of the detector",
                "type": "string",
                "enum": [
                  "Ionization Chambers",
                  "Si Drift Fluorescence Detector",
                  "Ge Fluorescence Detector",
                  "Mythen XRD Detector",
                  "Dispersive Emission Spectrometer"
