        "region_of_interest_start": {
          "title": "Region of Interest Start Value",
          "description": "For Fluorescence detection mode",
          "type": "number",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        },
        "region_of_interest_end": {
          "title": "Region of Interest End Value",
          "description": "For Fluorescence detection mode",
          "type": "number",
          "minimum": -9007199254740991,
          "maximum": 9007199254740991
        }
      },
