{
    "$id": "/data_catalogue/b18/energy_scan/1.0.0",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "data_catalogue/b18/energy_scan",
    "type": "object",
    "additionalProperties": false,
    "properties": { 
        "detector_information": {            
            "title": "Detector Information",
            "description": "Which element was measured",
            "$ref": "/data_catalogue/b18/_detector_information/1.0.0.json"
        },
        "element_measured": {
            "title": "Element Measured",
            "description": "Which element was measured",
            "$ref": "/shared/chemical_elements/1.0.0.json"
        },
        "edge": {
            "title": "Edge",
            "$ref": "/shared/absorption_edges/1.0.0.json"
        },
        "scan_parameters": {
            "title": "Scan Parameters",
            "type": "object",
            "properties": {
                "scan_type": {
                    "title": "Scan type",
                    "description": "Was the scan continuous or stepwise?",
                    "enum": [
                        "Continuous",
                        "Step"
                    ],
                    "type": "string"
                },
                "energy_min": {
                    "title": "Minimum Energy",
                    "description": "The minimum energy during the scan, eV",
                    "type": "number"
                },
                "energy_max": {
                    "title": "Maximum Energy",
                    "description": "The maximum energy during the scan, eV",
                    "type": "number"
                },
                "energy_resolution": {
                    "title": "Energy Resolution",
                    "description": "The energy resolution of the scan, eV",
                    "type": "number"
                },
                "time_per_scan": {
                    "title": "Total time per scan",
                    "description": "The total time of scan or the acquisition time per point, s",
                    "type": "number"
                }
            }
        },
        "optical_configurations": {
            "title": "Optical Configurations",
            "type": "object",
            "properties": {
                "beam_size": {
                    "title": "Beam Size",
                    "description": "The size of the beam, ??",
                    "type": "number"
                },
                "mirror_types": {
                    "title": "Mirror Types",
                    "type": "object",
                    "properties": {
                        "collimating_mirror": {
                            "title": "Collimating Mirror",
                            "enum": [
                                "311",
                                "111"
                            ],
                            "type": "string"
                        },
                        "focusing_mirror": {
                            "title": "Double Toroidal V/H Focusing Mirror",
                            "enum": [
                                "Pt",
                                "Cr"
                            ],
                            "type": "string"
                        },
                        "hr_mirror": {
                            "title": "H/R Mirror",
                            "enum": [
                                "Pt",
                                "Ni"
                            ],
                            "type": "string"
                        }
                    }
                }
            }
        },
        "motor_positions": {
            "title": "Motor Positions",
            "description": "The positions of the motors moved for the scan",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "motor_name": {
                        "title": "Motor Name",
                        "description": "The name of the motor",
                        "type": "string"
                    },
                    "motor_position_x": {
                        "title": "X Position",
                        "description": "The x-position of the motor",
                        "type": "number"
                    },
                    "motor_position_y": {
                        "title": "Y Position",
                        "description": "The y-position of the motor",
                        "type": "number"
                    }
                }
            }
        },
        "temperature": {
            "title": "Temperature",
            "description": "The temperature of the heating or cooling device, K",
            "type": "number"
        },
        "comments": {
            "title": "Comments",
            "description": "Any further comments",
            "type": "string"
        }
    }
}