{
    "$id": "/data_catalogue/b18/_detector_information/1.0.0",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "data_catalogue/b18/_detector_information",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "detectors": {
            "title": "Detectors",
            "description": "The detector used for the scan, and the detection mode used",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "detector": {
                        "title": "Detector",
                        "description": "The name of the detector",
                        "enum": [
                            "Ionization Chambers",
                            "Si Drift Fluorescence Detector",
                            "Ge Fluorescence Detector",
                            "Mythen XRD Detector",
                            "Dispersive Emission Spectrometer"
                        ],
                        "type": "string"
                    },
                    "detection_mode": {
                        "title": "Detection Mode",
                        "type": "string"
                    }
                }
            }
        },
        "amplification": {
            "title": "Amplification",
            "description": "For Transmission detection mode",
            "type": "number"
        },
        "detector_distance": {
            "title": "Detector Distance",
            "description": "The distance of the detector, for Fluorescence detection mode, ??",
            "type": "number"
        },
        "region_of_interest_start": {
            "title": "Region of Interest Start Value",
            "description": "For Fluorescence detection mode",
            "type": "number"
        },
        "region_of_interest_end": {
            "title": "Region of Interest End Value",
            "description": "For Fluorescence detection mode",
            "type": "number"
        }
    }
}