{
  "$id": "/samples/B18/1.0.0",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "samples/B18",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "chemical_composition": { 
      "title": "Chemical Formula",
      "description": "Chemical formula of the sample",
      "type": "string"    
    },
    "quantity_of_sample": {
      "title": "Quantity Of Sample",
      "description": "Weight of Sample in Pellet in mg",
      "type": "number"
    },
    "diameter_of_pellet": {
      "title": "Diameter of Pellet",
      "type": "number"
    },
    "pellet_preparation": {
      "title": "Pellet Preparation",
      "description": "Description of the preparation process",
      "type": "string",
      "maxLength": 500
    },
    "binder": {
      "title": "Binder",
      "description": "The binder used for the pellet",
      "enum": ["Cellulose", "Boron Nitride", "Polyethylene Glycol", "Other"],
      "type": "string"
    },
    "other_binder": {
      "title": "Chemical Formula of Binder",
      "description": "Chemical formula of the binder. Only needed if 'Other' selected.",
      "type": "string"
    },
    "sensitive": {
      "title": "Sensitive",
      "description": "Is the sample considered sensitive?",
      "type": "boolean"
    },
    "pellet_position": {
      "title": "Pellet Position",
      "description": "The position of the pellet during the scan",
      "enum": ["Free Standing", "Plastic Container", "Aluminium Bag", "Plastic Bag"],
      "type": "string"
    }
  },
  "required": [
    "chemical_composition",
    "quantity_of_sample",  
    "diameter_of_pellet",
    "pellet_preparation",
    "binder",
    "sensitive",
    "pellet_position"
  ]
}
