{
    "$id": "/samples/b21/hplc/1.0.0",
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "samples/b21/hplc",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "barcode",
      "position",
      "volume",
      "buffer_id_ph",
      "column"
    ],
    "properties": {
        "barcode": {
            "title": "Barcode",
            "description": "The sample's barcode",
            "type": "string",
            "pattern": "[A-Z]{4}-[0-9]{3}" ,
            "maxLength": 8
        },
        "position": {
            "title": "Sample Position",
            "description": "The position of the sample in the holder. Should be a number 1-9.",
            "type": "integer",
            "minimum": 1,
            "maximum": 9
        },
        "flow_rate": {
            "title": "Flow Rate",
            "description": "The flow rate for the sample, ml/min",
            "type": "number",
            "minimum": 0
        },
        "volume": {
            "title": "Volume",
            "description": "Volume of sample in Î¼L",
            "type": "number",
            "minimum": 30.0,
            "maximum": 100.0
        },
        "buffer_id_ph": {
            "title": "Buffer Identifier and pH",
            "description": "The buffer identifier and pH",
            "type": "string"
        },
        "column": {
            "title": "Column",
            "description": "The beamline column used",
            "enum": ["Shodex KW-402.5", "Shodex KW-403", "Shodex KW-404", "Shodex KW-405", "Superdex 200 Increase 3.2", "Superose 6 Increase 3.2"],
            "type": "string"
        },
        "notes": {
            "title": "Notes",
            "description": "Any further notes about the sample",
            "type": "string"
        }
    }
}
