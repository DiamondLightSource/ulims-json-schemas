{
  "title": "IFTest",
  "$id": "test/if_test/0.0.1",
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "country": {
      "default": "United States of America",
      "enum": [
        "United States of America",
        "Canada"
      ]
    },
    "street_address": {
      "type": "string"
    }
  },
  "examples": [
    {
      "country": "United States of America",
      "street_address": "dolor"
    }
  ],
  "else": {
    "properties": {
      "postal_code": {
        "pattern": "[A-Z][0-9][A-Z] [0-9][A-Z][0-9]"
      }
    }
  },
  "if": {
    "properties": {
      "country": {
        "const": "United States of America"
      }
    }
  },
  "then": {
    "properties": {
      "postal_code": {
        "pattern": "[0-9]{5}(-[0-9]{4})?"
      }
    }
  }
}