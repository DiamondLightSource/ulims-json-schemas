{
    "$id": "urn:ulims:samples:i15-1.0.0.1",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "I15-1 Sample Schema",
    "type": "object",
    "required": [
        "composition", "density",  "packing_fraction", "capillary"
    ],
    "properties": {
        "composition": {
            "title": "Composition",
            "type": "string",
            "description": "Molar composition of sample",
            "default": "C"
        },
        "density": {
            "title": "Density",
            "type": "number",
            "description": "Density of sample in g/cm^3",
            "default": 1.0
        },
        "packing_fraction": {
            "title": "Packing Fraction",
            "type": "number",
            "description": "Packing fraction of the sample in the capillary",
            "default": 0.5,
            "minimum": 0.0,
            "maximum": 1.0
        },
        "capillary": {
            "title": "Capillary",
            "enum": [
                "bs1.0", 
                "bs1.5",
                "bs2.0",
                "fq0.4",
                "fq1.0",
                "fq1.5",
                "fq2.0",
                "fq2.5",
                "fq3.17",
                "pi1.0",
                "pi1.5",
                "pi2.0",
                null
            ],
            "description": "The capillary type of this sample."
        },
        "comment": {
            "title": "Comment",
            "type": "string",
            "description": "Comment on this sample",
            "default": ""
        }
    }
}