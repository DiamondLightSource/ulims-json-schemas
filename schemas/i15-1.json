{
    "$id": "some url?",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "I15-1 Sample Schema",
    "type": "object",
    "required": [
        "composition", "density"
    ],
    "properties": {
        "composition": {
            "title": "Composition",
            "type": "string",
            "description": "Molar composition of sample",
            "default": "C"
        },
        "density": {
            "title": "Density",
            "type": "number",
            "description": "Density of sample in g/cm^3",
            "default": 1.0
        },
        "comment": {
            "title": "Comment",
            "type": "string",
            "description": "Comment on sample",
            "default": ""
        }
    }
}