{
  "$id": "urn:ulims:ingest_service:i07MetadataMap:1.0",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "I07 Metadata Map",
  "description": "Nexus paths for the default I07 Metadata Template",
